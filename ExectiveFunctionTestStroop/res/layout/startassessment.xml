<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/instrunctions_nexus7" >

    <TextView
        android:id="@+id/evaluationEnds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="19dp"
        android:paddingLeft="10dp"
        android:text="@string/trainingEnds"
        android:textColor="#000000"
        android:textSize="@dimen/abc_action_bar_title_text_size" />

    <Button
        android:id="@+id/startAssessmentButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/evaluationEnds"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="112dp"
        android:background="@android:drawable/btn_default"
        android:text="@string/StartAssessment"
        android:textColor="#000000" />

</RelativeLayout>
